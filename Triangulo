//Realiza un triangulo con asteriscos dependiendo del tama√±o que el usuario ingres.

package triangulo;
import java.util.Scanner;
public class Triangulo {

    public static void main(String[] args) {
        Scanner leer=new Scanner(System.in);
        int tam=0;
        System.out.println("Ingrese el tamano del arreglo");
        tam=leer.nextInt();
        char[][]matriz =new char [tam][tam];
        for(int i=0; i<tam;i++){
            for(int j=0; j<tam; j++){
                if(i>=j){
                    matriz [i][j]='*';
                
                }
                 
            }
        }
        for(int i=0; i<tam;i++){
            for(int j=0;j<tam;j++){
                System.out.print(matriz[i][j]);
            }
            System.out.println("");
        }
        
    }
    
}
