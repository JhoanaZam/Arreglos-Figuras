//Realiza un marco con asteriscos dependiendo del tama√±o que el usuario ingrese.
package cuadro;
import java.util.Scanner;

public class Cuadro {

    public static void main(String[] args) {
  
        Scanner leer=new Scanner(System.in);
        int tam=0;
        System.out.println("Ingrese el tamano del arreglo");
        tam=leer.nextInt();
        char[][]matriz =new char [tam][tam];
        for(int i=0; i<tam;i++){
            for(int j=0; j<tam; j++){
                if(i==0|| i==(tam-1)||j==0||j==(tam-1)){
                    matriz [i][j]='*';
                }else {
                     matriz[i][j]=' ';
                }

            }
                 
            }
        for(int i=0; i<tam;i++){
            for(int j=0;j<tam;j++){
                System.out.print(matriz[i][j]);
            }
            System.out.println("");
        }
        
        }
    }
